        button.btn.btn__filter.btn--sauna(data-filter="sauna") Сауны
        button.btn.btn__filter.btn--hamam(data-filter="hamam") Хаммамы
        button.btn.btn__filter.btn--all(data-filter="all") Всё
    .container
      .gallery__slider
        .gallery__slider-track
          each picture in gallerySlider
            .gallery__slide(data-type = `${picture.dataAttr}`)
              +picture(picture.path, picture.img, picture.format, picture.width, picture.height, picture.altText)
        button.gallery__btn-prev
          +icon("icon-arrow-left", 32, 32)
        button.gallery__btn-next
          +icon("icon-arrow-right", 32, 32)
